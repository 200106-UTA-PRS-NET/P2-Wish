@model SearchMovieGenreVM

@{
    ViewData["Title"] = "Search";
}

<h1>Search</h1>

<form asp-action="MoviesByGenreID">
    <select class="custom-select" id="selectedGenreID" name="selectedGenreID">
        @foreach (var item in Model.genres)
        {
            <option value=@item.GetHashCode()>@item</option>
        }
    </select>
    <input type="submit" value="Search"/>
</form>